{{#paper-toolbar}}
  <h2 class="md-toolbar-tools">
    {{#paper-sidenav-toggle class="menu-sidenav-toggle"}}
      {{paper-icon icon="menu"}}
    {{/paper-sidenav-toggle}}
    <span>Login</span>
  </h2>
{{/paper-toolbar}}

{{#paper-content classNames="md-padding"}}
  <div layout="column">
    Authenticated: {{session.isAuthenticated}}
  </div>

  <div layout="column" layout-align="center center">
    <form class="login" layout="column" layout-align="center center" {{action 'authenticate' on='submit'}}>
        {{paper-text label="User ID" value=identification class="login-field"}}
        {{paper-text label="Password" type="password" value=password class="login-field"}}
        {{#paper-button type="submit" class="login-button md-raised md-primary"}}Login{{/paper-button}}
    </form>
  </div>
{{/paper-content}}
